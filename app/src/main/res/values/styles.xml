        <!--<item name="tabTextColor">@color/dark_jungle_green_0.5</item>-->
    <!--</style>-->

    <style name="InstaTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="fontPath">@string/Roboto_Medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:tabStripEnabled">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="NavigationViewStyle">
        <item name="listPreferredItemHeightSmall">70dp</item><!-- menu item height-->
    </style>

    <style name="InstaToolBar" parent="Theme.AppCompat">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="android:textColorPrimary">@color/dark_jungle_green</item>
        <item name="android:background">@color/snow</item>
        <item name="android:textColorSecondary">@color/dark_jungle_green</item>
        <item name="android:textSize">@dimen/text_toolbar</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InstaText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:paddingBottom">@dimen/default_text_padding</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_text_padding</item>
    </style>

    <style name="InstaText.Header" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="fontPath">@string/AvenirNext_DemiBold</item>
    </style>
    <style name="InstaText.LargeX3" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:textSize">@dimen/text_large_x3</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
    </style>
    <style name="InstaText.LargeX2" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:textSize">@dimen/text_large_x2</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
    </style>

    <style name="InstaText.Large" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
    </style>

    <style name="InstaText.Medium.Bold" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green_0.87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
    </style>
    <style name="InstaText.Medium" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green_0.87</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
    </style>

    <style name="InstaText.Small2" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontPath">@string/AvenirNext_Regular</item>
    </style>
    <style name="InstaText.Small" parent="InstaText">
        <item name="android:textColor">@color/dark_jungle_green_0.5</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontPath">@string/AvenirNext_Regular</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="queryBackground">@color/transparent</item>
        <item name="queryHint">@string/search</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="searchIcon">@drawable/ic_search</item>-->
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="InstaButton" parent="Widget.AppCompat.Button">>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
        <item name="android:background">@drawable/button_insta</item>
        <item name="android:textColor">@drawable/button_insta_text</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:padding">@dimen/default_text_padding</item>
    </style>

    <style name="InstaImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_insta</item>
        <item name="android:padding">@dimen/default_text_padding</item>
    </style>

    <style name="InstaButton.Reverse" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontPath">@string/AvenirNext_Medium</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:background">@drawable/button_insta_colored</item>-->
    </style>

    <!--<style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">--><!--<item name="android:textCursorDrawable">@drawable/cursor</item>--><!--</style>-->

    <style name="ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="toolbarStyle">@style/InstaToolBar</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_close</item>
    </style>


</resources>
