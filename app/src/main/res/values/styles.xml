<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.InstaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/InstaToolBar</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/InstaButton</item>
        <item name="android:imageButtonStyle">@style/InstaImageButton</item>

    </style>

    <style name="AppTheme.Transparent" parent="Theme.InstaTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--<style name="InstaTabLayout" parent="Widget.Design.TabLayout">-->
